// Parent Class
class Football {
    protected double radius;
    protected double weight;

    // Constructor
    public Football(double radius, double weight) {
        this.radius = radius;
        this.weight = weight;
    }

    // Display function
    public void display() {
        System.out.println("Radius: " + radius);
        System.out.println("Weight: " + weight);
    }
}

// Child Class
class FootballColor extends Football {
    private String color;

    public FootballColor(double radius, double weight, String color) {
        super(radius, weight);   // using super keyword
        this.color = color;
    }

    // Override display method
    @Override
    public void display() {
        super.display();   // call parent display
        System.out.println("Color: " + color);
    }
}

// Test Class
public class Test1 {
    public static void main(String[] args) {

        // Dynamic Method Dispatch
        Football obj = new FootballColor(5.5, 450, "White & Black");
        obj.display();
    }
}
